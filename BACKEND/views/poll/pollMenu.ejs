<%- include("../includes/headerFile.ejs") %>
    <title>Poll Menu</title>
</head>
<body>
    <div class="formArea">
        <form method="POST" action="/menu/poll"> 
            <h1>Poll</h1>
            <div class='div'>
                <label for='time' class='label'>What is this for?</label>
