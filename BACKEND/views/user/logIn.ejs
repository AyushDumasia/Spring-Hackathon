<title>Log In Page</title>
<body>
    <%- include("../flash/failure.ejs") %>
    <%- include("../flash/success.ejs") %>
    <div class="formArea">
        <form method="POST" action="/log-in">
            <h1>Login</h1>
            <span class="closure">Don't have an account?
                <a href="/sign-up">Sign up!</a>
            </span>
            <div class="inputField">
                <div class="div">
                    <label for="username" class="label">Username</label>
                    <input  class="input" id="username" placeholder="Enter your username" name="username" required>
                </div>
                <div class="div">
                    <label for="password" class="label">Password</label>
                    <div class="passwordBox">
                        <input  class="input" id="password" placeholder="Enter your password" name="password" type="password" required>
                        <!-- <div class='eye-icon'> -->
                            <!-- Add logic for eye and eyeSlash here -->
                        <!-- </div> -->
                    </div>
                </div>
                <a href="#" class="closure1">Forget password</a>
            </div>
            <button class="action">Log in</button>
